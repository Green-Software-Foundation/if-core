{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./",
    "declarationMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "alwaysStrict": true,
    "declaration": true,
    "incremental": false,
    "lib": [
      "es2020"
    ],
    "module": "CommonJS",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2020",
    "composite": false
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    ".types-compat",
    "build"
  ],
}
